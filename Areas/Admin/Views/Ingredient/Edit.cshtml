@model ELabel.ViewModels.IngredientDto

@{
    ViewData["Title"] = "Edit";
    ViewData["Name"] = Model.Name;
}

<h1>Edit</h1>

<h4>Ingredient</h4>
<hr />

<form asp-action="Edit">

    <div class="row">
        <div class="col-lg-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @Html.ValidationMessage("CustomError", new { @class = "text-danger" })

            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Custom" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Category" class="form-label"></label>
                <select asp-for="Category" asp-items="Html.GetEnumSelectList<IngredientCategory>()" class="form-select"></select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ENumber" class="form-label"></label>
                <input asp-for="ENumber" class="form-control" />
                <span asp-validation-for="ENumber" class="text-danger"></span>
            </div>
            <div class="mb-3 form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Allergen" /> @Html.DisplayNameFor(model => model.Allergen)
                </label>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">

            <h4>Localization</h4>
            <hr />

            @Html.EditorFor(model => model.LocalizableStrings)

        </div>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    </div>

</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
